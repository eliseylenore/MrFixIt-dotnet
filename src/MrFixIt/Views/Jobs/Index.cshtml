@{
}
<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create", new { @class = "btn btn-success" })
</div>
<div class="current-jobs">
    @foreach (var Job in Model)
    {
        <div class="col-sm-6">
            <div class="panel panel-default panel-front">
                <div class="panel-heading">
                    <h3>@Job.Title</h3>
                </div>
                <div class="panel-body">
                    <h4>@Job.Description</h4>
                    @if (Job.Worker == null)
                {
                        <h5>This job is unclaimed. @Html.ActionLink("Claim This Job", "Claim", new { @text = @Job.Title, id = Job.JobId })</h5>
                    }
                    else
                    {
                        <h5>This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</h5>

                    }
                </div>
                </div>
        </div>
}
</div>

